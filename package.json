    "@testing-library/react": "16.3.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "30.0.0",
    "autoprefixer": "10.4.21",
    "babel-jest": "30.0.2",
    "babel-loader": "10.0.0",
    "babel-plugin-macros": "3.1.0",
    "browserslist": "4.25.0",
    "clean-webpack-plugin": "4.0.0",
    "cli-color": "2.0.4",
    "copy-webpack-plugin": "13.0.0",
